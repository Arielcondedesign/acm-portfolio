---
// BaseLayout.astro
const { title, description } = Astro.props;
---

<html>
  <head>
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <header>
      <h1>{title}</h1>
      <nav>
        <a href="/">Inicio</a>
        <a href="/mi-nueva-pagina">Mi Nueva Página</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <p>© 2023 Mi Sitio Web</p>
    </footer>
  </body>
</html>